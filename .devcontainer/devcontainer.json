{
    "name": "Alquiler de pistas App",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "runServices": [
        "app",
        "db",
        "pgadmin"
    ],
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/python:1.8.0": {
            "version": "3.14"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "forwardPorts": [
        8000,
        5432,
        5050
    ],
    "portsAttributes": {
        "8000": {
            "label": "Application",
            "onAutoForward": "notify"
        },
        "5432": {
            "label": "Database",
            "onAutoForward": "notify"
        },
        "5050": {
            "label": "PgAdmin",
            "onAutoForward": "notify"
        }
    }
}