{
    "name": "Alquiler de pistas App",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "runServices": [
        "app",
        "db",
        "pgadmin",
        "task_worker"
    ],
    "workspaceFolder": "/workspace",
    "postStartCommand": "bash -lc 'echo \"SMTP config: server=$SMTP_SERVER, port=$SMTP_PORT, sender=$SENDER_EMAIL, sender_password_set=$( [ -n \"$SENDER_PASSWORD\" ] && echo true || echo false )\"'",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "google.geminicodeassist"
            ]
        }
    },
    "forwardPorts": [
        8000,
        5432,
        5050
    ],
    "portsAttributes": {
        "8000": {
            "label": "Application",
            "onAutoForward": "notify"
        },
        "5432": {
            "label": "Database",
            "onAutoForward": "notify"
        },
        "5050": {
            "label": "PgAdmin",
            "onAutoForward": "notify"
        }
    }
}